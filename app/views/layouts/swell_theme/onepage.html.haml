!!!
%html
	%head
		= render 'application/html_head', args: {}
		= stylesheet_link_tag "app_theme_onepage_text_slider", media: "all"
		= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"
		= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic"
		= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900"

	%body
		= hidden_field_tag :map_marker, image_path("app_theme/theme/onepage/img/map-marker.png")
		%section#preloader
			.site-spinner
		#page-wraper
			.wrapper
				= yield
				= render 'application/swell_theme/onepage_footer'


		%script{:src => "https://maps.googleapis.com/maps/api/js?sensor=false", :type => "text/javascript"}
		= javascript_include_tag "app_theme_onepage_text_slider"
